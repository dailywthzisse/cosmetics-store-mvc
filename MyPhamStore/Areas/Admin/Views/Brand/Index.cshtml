@model IEnumerable<MyPhamStore.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table>
    <div class="border-bottom " style="height: 75px;">
        @Html.ActionLink("Thêm thương hiệu mới", "Create", "Brand", new
           {
               @class = "btn btn-success p-3 mt-2 float-right mr-2"
           })

    </div>

    <div class="px-2">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Mã thương hiệu</th>
                    <th>Thương hiệu</th>
                    <th>Hình ảnh </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.BrandId</td>
                    <td>@item.BrandName</td>
                    <td><img src="~/Content/ImageProducts/Brand/@item.Image" width="50px" alt=""></td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Brand", new { id = item.BrandId }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Brand", new { id = item.BrandId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this item?');" })

                    </td>
                </tr>
                }
            </tbody>
          
    </table>
 </div>
