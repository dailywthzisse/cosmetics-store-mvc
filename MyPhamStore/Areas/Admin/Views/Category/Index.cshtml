@model IEnumerable<MyPhamStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table>
    <div class="border-bottom " style="height: 75px;">
        @Html.ActionLink("Thêm loại sản phẩm", "Create", "Category", new
           {
               @class = "btn btn-success p-3 mt-2 float-right mr-2"
           })
    </div>

    <div class="px-2">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Mã Loại Sản Phẩm</th>
                    <th>Tên Loại Sản Phẩm</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Category", new { id = item.CategoryId }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Category", new { id = item.CategoryId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this item?');" })

                    </td>
                </tr>

                }
            </tbody>
            
        </table>
